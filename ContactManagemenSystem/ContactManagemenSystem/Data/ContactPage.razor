@page "/contactPage"
@using ContactManagemenSystem.Data
@inject ContactService contactService

Navigate to Add Contact Component when Add New Contact link is clicked
<NavLink class="nav-link" href="AddContact">
    <span class="oi oi-plus" aria-hidden="true"></span>Add New Contact
</NavLink>

<h1>All Contacts</h1>
@if (contacts == null)
{
    <div class="spinner"></div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Contact Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Birth Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in contacts)
            {
                <tr>
                    <td>@contact.Id</td>
                    <td>@contact.FirstName</td>
                    <td>@contact.LastName</td>
                    <td>@contact.PhoneNumber</td>
                    <td>@contact.BirthDate</td>
                    <td>
                        <a class="nav-link" href="EditContact/@contact.Id">
                            <span class="oi oi-pencil" aria-hidden="true"></span>Edit
                        </a>
                        <a class="nav-link" @onclick="@(() => confirmDelete(contact))">
                            <span class="oi oi-trash" aria-hidden="true"></span>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<Contact> contacts;

    protected override async Task OnInitializedAsync()
    {
        contacts = await Task.Run(() => contactService.getContact());
